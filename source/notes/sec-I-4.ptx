                <exercise workspace=".5in">
                    <title>Truth Tables</title>
                    <statement>
                        <p>
                            Operations on propositions result in new propositions. To keep track of the resulting truth 
                            values, we can use <term>truth tables</term>.
                        </p>
                        <sidebyside>
                            <tabular>
                                <row header="yes" bottom="major">
                                    <cell><m>p</m></cell>
                                    <cell><m>\neg p</m></cell>
                                </row>
                                <row>
                                    <cell>T</cell>
                                    <cell></cell>
                                </row>
                                <row>
                                    <cell>F</cell>
                                    <cell></cell>
                                </row>
                            </tabular>

                            <tabular>
                                <row header="yes" bottom="major">
                                    <cell><m>p</m></cell>
                                    <cell><m>q</m></cell>
                                    <cell><m>p \wedge q</m></cell>
                                </row>
                                <row>
                                    <cell></cell>
                                    <cell></cell>
                                    <cell></cell>
                                </row>
                                <row>
                                    <cell></cell>
                                    <cell></cell>
                                    <cell></cell>
                                </row>
                            </tabular>

                            <tabular>
                                <row header="yes" bottom="major">
                                    <cell><m>p</m></cell>
                                    <cell><m>q</m></cell>
                                    <cell><m>p \vee q</m></cell>
                                </row>
                                <row>
                                    <cell></cell>
                                    <cell></cell>
                                    <cell></cell>
                                </row>
                                <row>
                                    <cell></cell>
                                    <cell></cell>
                                    <cell></cell>
                                </row>
                            </tabular>
                        </sidebyside>
                    </statement>
                    
                    
                    
