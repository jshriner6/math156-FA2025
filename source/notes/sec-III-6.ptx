                <exercise workspace="2in">
                    <title>Example 1: Counting</title>
                    
                    
                    <statement>
                        <p>
                            If <m>|A| = m</m> and <m>|B| = n</m>, then <m>|A \times B| = mn</m>.
                        </p>
                    </statement>
                    
                </exercise>
                <exercise workspace="2in">
                    <title>Example 2: Counting</title>
                    
                    
                    <statement>
                        <p>
                            If <m>|A| = n</m>, then <m>|P(A)| = 2^n</m>.
                        </p>
                    </statement>
                    
                </exercise>
